  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "node-sass": "^4.6.1",
    "postcss-cli": "^4.1.1",
    "puppeteer": "^0.13.0",
    "serve": "^6.4.1"
  }
}
