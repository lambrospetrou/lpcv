{
  "name": "lpcv-html",
  "version": "1.0.0",
  "scripts": {
    "start": "npx serve -p 8080 build",
    "sass": "npx sass src/style.scss --style compressed",
    "autoprefixer": "npx postcss --use autoprefixer --autoprefixer.browsers '> 1%' -o build/style.css --no-map",
    "build-css": "npm run sass | npm run autoprefixer",
    "prebuild": "rm -rf build && mkdir -p build",
    "build": "npm run build-css",
    "postbuild": "npm run copy-static",
    "copy-static": "cp src/index.html build/",
    "generate-pdf": "[ -d './build' ] && node build-tool/generate-pdf.js",
    "release": "npm run build",
    "postrelease": "npm run generate-pdf"
  },
  "keywords": [],
  "author": "Lambros Petrou",
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "postcss-cli": "^6.1.3",
    "puppeteer": "^2.0.0",
    "sass": "^1.23.7",
    "serve": "^11.2.0",
    "serve-handler": "^6.1.2"
  }
}
