{
  "name": "html",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "serve -p 8080 build",
    "sass": "./node_modules/node-sass/bin/node-sass style.scss -o ./ --output-style compressed",
    "autoprefixer": "./node_modules/postcss-cli/bin/postcss --use autoprefixer --autoprefixer.browsers \"> 1%\" ./style.css -o ./style.css --no-map.inline",
    "build-css": "npm run sass && npm run autoprefixer",
    "build-pdf": "node build-tools/generate-pdf.js",
    "build": "npm run build-css && npm run build-pdf",
    "release": "npm run build && rm -rf build && mkdir build && cp index.html cv.pdf style.css build/"
  },
  "keywords": [],
